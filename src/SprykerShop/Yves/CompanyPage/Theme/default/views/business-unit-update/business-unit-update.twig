{% extends template('page-layout-company', 'CompanyPage') %}

{% define data = {
    form: _view.form,

    title: 'company.account.business_unit' | trans,
    activePage: 'business-unit'
} %}

{% block companyNavigation %}
    {% include molecule('business-unit-navigation', 'CompanyPage') with {
        class: 'box',
        data: {
            activePage: data.activePage
        }
    } only %}
{% endblock %}

{% block companyContent %}
    <div class="box">
        <div class="grid grid--justify">
            <div class="col">
                <h5>{{ 'company.account.business_unit.edit_information' | trans }}</h5>
            </div>
            <div class="col">
                <a class="button button--alert" href="{{ url('company/business-unit/delete', {'id': data.form.vars.value.id_company_business_unit }) }}">{{ 'company.account.business_unit.delete' | trans }}</a>
            </div>
        </div>
        {% include molecule('form') with {
            data: {
                form: data.form,
                layout: {
                    email: 'col col--sm-12 col--lg-6',
                    phone: 'col col--sm-12 col--lg-6'
                },
                submit: {
                    enable: true
                },
                cancel: {
                    enable: true,
                    url: url('company/business-unit'),
                    text: 'general.back.button' | trans
                }
            }
        } only %}
    </div>
{% endblock %}