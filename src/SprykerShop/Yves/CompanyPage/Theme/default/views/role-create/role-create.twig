{% extends template('page-layout-company', 'CompanyPage') %}

{% define data = {
    form: _view.companyRoleForm,

    title: 'company.account.company_role' | trans,
    activePage: 'role'
} %}

{% block breadcrumbs %}
    {% include molecule('breadcrumb') with {
        data: {
            steps: [
                {
                    label: 'company.account.page-title' | trans,
                    url: url('company/overview'),
                },
                {
                    label: data.title,
                    url: url('company/company-role')
                },
                {
                    label: 'company.account.company_role.create' | trans,
                }
            ]
        }
    } only %}
{% endblock %}

{% block companyContent %}
    <div class="box">
        {% include molecule('form') with {
            data: {
                title: 'company.account.company_role.create' | trans,
                form: data.form,
                submit: {
                    enable: true
                },
                cancel: {
                    enable: true,
                    url: url('company/company-role'),
                    text: 'general.back.button' | trans
                }
            }
        } only %}
    </div>
{% endblock %}
